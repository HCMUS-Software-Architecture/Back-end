server:
  port: ${SERVER_PORT:8081}

spring:
  datasource:
    driver-class-name: org.postgresql.Driver
    # Remote PostgreSQL JDBC URL with timezone parameter
    # Format: jdbc:postgresql://host:port/database?serverTimezone=UTC
    url: ${PG_URI}
    username: ${PG_USERNAME}
    password: ${PG_PASSWORD}
    hikari:
      connection-init-sql: SET TIME ZONE 'UTC'
  jpa:
    database: postgresql
    show-sql: ${SHOW_SQL:true}
    hibernate:
      # Options: create, create-drop, update, validate, none
      # Use 'update' for development, 'validate' or 'none' for production
      ddl-auto: ${DDL_AUTO:update}
    properties:
      hibernate:
        jdbc:
          time_zone: UTC
  data:
    mongodb:
      uri: ${MONGODB_URI}
      database: ${MONGODB_DATABASE:trading}
    redis:
      url: ${REDIS_URL}
      ssl:
        enabled: ${REDIS_SSL_ENABLED:true}
      timeout: ${REDIS_TIMEOUT:60000}
  cache:
    type: redis
    redis:
      time-to-live: ${CACHE_TTL:600000}

price:
  symbols: ${PRICE_SYMBOLS:btcusdt,ethusdt,bnbusdt}

token:
  secret: ${JWT_SECRET}

management:
  endpoints:
    web:
      exposure:
        include: health,info
  endpoint:
    health:
      show-details: when-authorized
