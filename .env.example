# ====================================
# Trading Platform - Environment Configuration Template
# ====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!
# ====================================

# ====================================
# PostgreSQL Database (Price Data)
# ====================================
POSTGRES_DB=trading_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password_123

# ====================================
# MongoDB - Local Docker
# ====================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_this_secure_password_456

# ====================================
# MongoDB URI Configuration
# Choose one of the following:
# ====================================
# Option 1: Local Docker MongoDB (default for development)
MONGODB_URI=mongodb://admin:admin123@localhost:27017/?authSource=admin
MONGODB_DATABASE=trading

# Option 2: MongoDB Atlas Cloud (uncomment and configure for production)
# MONGODB_URI_CLOUD=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?appName=TradingApp
# To use cloud MongoDB, set:
# MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?appName=TradingApp

# ====================================
# JWT Authentication
# ====================================
# Generate a secure random string (minimum 256 bits for HS256)
# You can generate one using: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG_FOR_PRODUCTION
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000

# ====================================
# Redis (Caching & Session Management)
# ====================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=change_this_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_SSL_ENABLED=false
REDIS_TIMEOUT=60000

# ====================================
# RabbitMQ (Message Broker for WebSocket STOMP)
# ====================================
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=change_this_rabbitmq_password
SPRING_RABBITMQ_HOST=localhost
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=guest
SPRING_RABBITMQ_PASSWORD=guest
SPRING_RABBITMQ_STOMP_PORT=61613

# ====================================
# Google OAuth Configuration
# ====================================
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret-from-google

# ====================================
# CORS Configuration
# ====================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:63342
CORS_MAX_AGE=3600

# ====================================
# Price Collection Service
# ====================================
# Comma-separated list of trading symbols to track
PRICE_SYMBOLS=btcusdt,ethusdt,bnbusdt

# ====================================
# Cache Configuration
# ====================================
CACHE_TYPE=redis
CACHE_DEFAULT_TTL=600
CACHE_CANDLES_TTL=300
CACHE_ARTICLES_TTL=600

# ====================================
# JPA / Hibernate Configuration
# ====================================
JPA_SHOW_SQL=false
JPA_DDL_AUTO=update
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ====================================
# Logging Configuration
# ====================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_BACKEND=DEBUG
LOGGING_LEVEL_HIBERNATE=WARN
